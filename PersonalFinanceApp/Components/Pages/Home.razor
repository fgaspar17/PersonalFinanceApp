@page "/"
@inject IPaymentMethodService PaymentMethodService

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th><button>Create</button></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var method in paymentMethods)
        {
            <tr>
                <td>@method.PaymentMethodId</td>
                <td>@method.Name</td>
                <td><button id="@method.PaymentMethodId">Update</button> <button id="@method.PaymentMethodId">Delete</button></td>
            </tr>
        }
	</tbody>
</table>

@code {
    private List<PaymentMethodDto> paymentMethods = new();
	private CancellationTokenSource? _cts;

    protected override async Task OnInitializedAsync()
    {
		_cts = new CancellationTokenSource();
        paymentMethods = await PaymentMethodService.GetAllPaymentMethodsAsync(_cts.Token);
	}

    public void Dispose()
    {
        _cts?.Cancel();
        _cts?.Dispose();
	}
}